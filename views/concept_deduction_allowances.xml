<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hn_contract_concepts_deductions_tree_view" model="ir.ui.view">
    <field name="name">hr.contract.concepts.deductions.tree.view</field>
    <field name="model">hr.contract.concepts.deductions</field>
    <field name="arch" type="xml">
        <tree string="Concepto beneficios">
            <field name="name"/>
            <field name="code"/>
            <field name="active"/>
        </tree>
    </field>
    </record>

    <!-- Import Inventory Wizard form -->
    <record id="payroll_hn_increased_salary_wizard_form_view" model="ir.ui.view">
        <field name="name">payroll.hn.increased.salary.wizard.form.view</field>
        <field name="model">hr.contract.concepts.deductions</field>
        <field name="arch" type="xml">
            <form string="Conceptos beneficios y deducciones">
            <sheet> 
            <group>
                    <group>
                        <field name="name" />
                        <field name="concept_type"/>
                    </group>
                    <group>
                        <field name="code" />
                        <field name="active" />
                    </group>
            </group>
            </sheet>
           </form>
        </field>
    </record>

    <!--  Action of Import inventory wizard -->
    <record model="ir.actions.act_window" id="action_hr_hn_contract_concepts_deductions">
    <field name="name">Beneficios y deducciones</field>
    <field name="res_model">hr.contract.concepts.deductions</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">Crear primer registro</p>
    </field>
    </record>

  <menuitem string="Beneficios y deducciones" id="menu_hr_hn_beneficios_deducciones" parent="hr_payroll.menu_hr_payroll_configuration" action="action_hr_hn_contract_concepts_deductions" sequence="160"/>

</odoo>